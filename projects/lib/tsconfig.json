{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": ["./src/lib/typings", "node", "lodash-es"],
    "lib": [
      "dom",
      "es2018"
    ],
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableIvy": false,
    "enableResourceInlining": true
  }
}
